<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: [board, board.comments.build], local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control mb-3", row: 4, placeholder: "コメント" %>
      <%= f.submit t('defaults.post'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>